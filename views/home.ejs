<html>
    <head>
            <script src="https://kit.fontawesome.com/b0793d4303.js"></script>
       <link rel="stylesheet" href="/css/home.css">
    </head>
    <body style="background-color: rgb(248, 215, 215)">
        <title>
            <%= title %>
        </title>
        <h1 id="page-heading" style="font-size: 50px">
                <i class="fas fa-address-book"></i>
            My Contact List</h1>
        <div>
            <ul>
                <% for (let i of contact_list){%>
                    <li id="list" >
                        <div style="border: 1px solid black;width:40%; height: 120px; background-color: rgb(133, 91, 127) ;border-radius:20px" id="box">
                        
                        <p  style="display: block ">Name:  <%= i.name %>  </p>
                        <p style="display:block">Phone:  <%= i.phone%></p>
                        
                        </div>
                        <div id="delete-button">
                            <a href="/deletecontact/?id=<%= i._id %>" >
                                    Delete
                                    <i class="fas fa-window-close"></i>
                            </a>

                        </div>
                       
                    </li>
               <% }%>
            </ul>
        </div>
        <form action="/create_contact" method="POST" style="text-align: center">
            <input type="text" name="name" placeholder="Enter name" required >
            <input type="number" name="phone" placeholder="Enter phone number" required>
            <button type="submit" style="background-color: dimgrey;height: 45px"> Add contact</button>



        </form>
        <script type="javascript" src="/js/home.js"></script>
        
    </body>
</html>